<div class="row justify-content-center">
  <div class="col-md-6 col-lg-5 col-xl-4">
    <div class="card shadow-lg border-0 rounded-4 p-4 p-md-5">
      <div class="text-center mb-4">
        <div class="bg-gradient rounded-circle mx-auto mb-3 p-4" 
             style="width: 100px; height: 100px; background: linear-gradient(135deg, #667eea, #764ba2);">
          <i class="bi bi-shield-lock display-6 text-white"></i>
        </div>
        <h1 class="h3 fw-bold mb-1">Bienvenido de vuelta</h1>
        <p class="text-muted mb-0">Inicia sesión en tu colección</p>
      </div>

      <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <i class="bi bi-exclamation-triangle me-2"></i>
          <%= error %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% } %>

      <form action="/login" method="post">
        <div class="mb-4">
          <label for="usuario" class="form-label fw-500 mb-2">
            <i class="bi bi-person me-2 text-muted"></i>Usuario
          </label>
          <input type="text" 
                 class="form-control form-control-lg" 
                 id="usuario" 
                 name="usuario" 
                 placeholder="Introduce tu usuario" 
                 required 
                 autocomplete="username">
        </div>

        <div class="mb-4">
          <label for="password" class="form-label fw-500 mb-2">
            <i class="bi bi-lock me-2 text-muted"></i>Contraseña
          </label>
          <input type="password" 
                 class="form-control form-control-lg" 
                 id="password" 
                 name="password" 
                 placeholder="Introduce tu contraseña" 
                 required 
                 autocomplete="current-password">
        </div>

        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3 fw-500">
          <i class="bi bi-box-arrow-in-right me-2"></i>Entrar
        </button>
      </form>

      <div class="text-center">
        <p class="text-muted mb-0">¿No tienes cuenta?</p>
        <a href="/register" class="btn btn-outline-primary btn-lg w-100 mt-2">
          <i class="bi bi-person-plus me-2"></i>Crear cuenta gratis
        </a>
      </div>

    </div>
  </div>
</div>
